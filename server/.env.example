# Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/gigflow
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/gigflow?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
# For production, use your frontend URL:
# CORS_ORIGIN=https://your-app-name.onrender.com

# Frontend URL (optional, for password reset links)
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-app-name.onrender.com

# Seed Secret Key (optional, for /api/seed endpoint)
SEED_SECRET_KEY=seed-me-production-2026
